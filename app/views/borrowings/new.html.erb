<h1>Borrow a Book</h1>
<%= form_with model: @borrowing, local: true do |form| %>
  <div>
    <%= form.label :book_id, "Select Book" %>
    <%= form.collection_select :book_id, @books, :id, :title %>
  </div>
  <div>
    <%= form.label :borrower_name %>
    <%= form.text_field :borrower_name %>
  </div>
  <div>
    <%= form.submit "Borrow" %>
  </div>
<% end %>
<%= link_to 'Back to All Books', books_path %>
